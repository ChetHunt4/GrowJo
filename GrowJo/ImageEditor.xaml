<Window x:Class="GrowJo.ImageEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrowJo"
        mc:Ignorable="d"
        Title="ImageEditor" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Image MaxWidth="1000" MaxHeight="1000" x:Name="imgToEdit" MouseMove="imgToEdit_MouseMove" MouseDown="imgToEdit_MouseDown" MouseUp="imgToEdit_MouseUp" Stretch="None" />
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label>Rotate:</Label>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnRotateLeft" Click="btnRotateLeft_Click">&lt;</Button>
                    <Button x:Name="btnRotateRight" Click="btnRotateRight_Click">&gt;</Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                <ToggleButton x:Name="btnCrop" Click="btnCrop_Click">Crop</ToggleButton>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                <Button x:Name="btnResize" Click="btnResize_Click">Resize</Button>
                <StackPanel Orientation="Horizontal" x:Name="pnlResizeOptions" Visibility="Collapsed">
                    <Label>Width:</Label>
                    <TextBox x:Name="txtImageWidth" TextChanged="txtImageWidth_TextChanged" MinWidth="30px" />
                    <Label>Height:</Label>
                    <TextBox x:Name="txtImageHeight" TextChanged="txtImageHeight_TextChanged" MinWidth="30px" />
                    <Button x:Name="btnSaveResize" Click="btnSaveResize_Click" IsEnabled="False">Finish Resize</Button>
                    <Button x:Name="btnCancelResize" Click="btnCancelResize_Click">Cancel Resize</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnSaveImage" Click="btnSaveImage_Click">Save Image</Button>
            <Button x:Name="btnSaveImageCopy" Click="btnSaveImageCopy_Click">Save a Copy</Button>
        </StackPanel>
    </StackPanel>
</Window>
