<Window x:Class="GrowJo.ImageReceiver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrowJo"
        mc:Ignorable="d"
        Title="ImageReceiver" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="10" DockPanel.Dock="Top">

        <StackPanel x:Name="pnlContentSelect">
            <Button Content="Save To Folder" x:Name="btnOpenContent" Margin="10,0,0,0" Click="btnOpenContent_Click"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" x:Name="pnlImageReceiver" Visibility="Collapsed">
            <Label x:Name="lblContent" />
            <Label>Received Files:</Label>
            <ListBox x:Name="lbReceived" />

            <!--<Image x:Name="QrImage" Width="150" Height="150" Margin="0,10,0,0"/>-->
        </StackPanel>
    </StackPanel>
</Window>
